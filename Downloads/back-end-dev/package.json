{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "identity": "",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "build": "rm -rf ./dist && nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:identity": "NODE_ENV=local node -r ts-node/register -r tsconfig-paths/register ./apps/identity/src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "codegen": "graphql-codegen --config apps/supertest/codegen.ts",
    "codegen:admin": "graphql-codegen --config apps/supertest/admin.codegen.ts",
    "supertest": "ts-node -r tsconfig-paths/register apps/supertest/src/main.ts",
    "migrations:cp": "./startup/scripts/migration/copy-migrations.sh"
  },
  "dependencies": {
    "@apollo/gateway": "2.10.0",
    "@apollo/server": "4.11.3",
    "@apollo/subgraph": "2.10.0",
    "@as-integrations/fastify": "^2.1.1",
    "@keyv/redis": "^4.3.3",
    "@nestjs/apollo": "^13.0.4",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "11.0.13",
    "@nestjs/core": "11.0.13",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/graphql": "13.0.4",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/microservices": "^11.0.13",
    "@nestjs/platform-fastify": "^11.0.13",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "11.0.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bignumber.js": "^9.2.0",
    "cache-manager": "^6.4.2",
    "cacheable": "^1.8.10",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dataloader": "^2.2.3",
    "dotenv": "16.4.7",
    "fast-xml-parser": "^5.2.0",
    "fastify": "^5.2.2",
    "graphql": "16.10.0",
    "ioredis": "^5.6.0",
    "kafkajs": "2.2.3",
    "nest-commander": "^3.17.0",
    "nestjs-i18n": "^10.5.1",
    "pg": "8.14.1",
    "pino": "^9.6.0",
    "pino-pretty": "13.0.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.22",
    "typeorm-transactional": "0.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.6.0",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.3",
    "@nestjs/testing": "^11.0.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@typescript-eslint/parser": "8.29.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.6",
    "graphql-request": "^6.0.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(test|spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/",
      "<rootDir>/common/"
    ],
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@admin/(.*)$": "<rootDir>/apps/admin/src/$1",
      "^@identity/(.*)$": "<rootDir>/apps/identity/src/$1",
      "^@notification/(.*)$": "<rootDir>/apps/notification/src/$1",
      "^@balance/(.*)$": "<rootDir>/apps/balance/src/$1",
      "^@supertest/(.*)$": "<rootDir>/apps/supertest/src/$1",
      "^@app/nest-dto-rpc(|/.*)$": "<rootDir>/libs/nest-dto-rpc/src/$1",
      "^@app/logger(|/.*)$": "<rootDir>/libs/logger/src/$1"
    }
  }
}
